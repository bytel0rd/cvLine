    <section class="bg-primary" id="searchArea">
        <div class="container">
            <div class="row">
              <div class="col-lg-8 col-lg-offset-2 text-center">
                  <h2 class="section-heading">Finding The Right Employee!</h2>
                  <hr class="light">
                  <p class="text-faded"> All You Have To Do Is Write The Academic Qualifications or Certification  or Techincal Skill  And Age of Such Individual You Require or even name for Already Know Individuals</p>
              </div>
            </div>
            <div class="row">
              <div class="col-lg-8 col-lg-offset-2">
              <form class="form-group" action="/api/search" method="post">
                <div class="form-group">
                  <input type="text" class="form-control" id="searchBox" name="searchBox" placeholder="Your Dream Employee">
                  <button type="Sumbit" class="btn  btn-xl pull-right btn-success">
                    <span class="glyphicon glyphicon-search"> Search</span>
                  </button>
                </div>
              </form>
              </div>
            </div>
        </div>
    </section>
    <!-- user search lists is returned in the following section -->
    <section>
      <% userbios.forEach(function(user){ %>
        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-6">
            <p><%= %></p>
            <div class="row">
              <div class="col-md-4">
                <img class="img-circle" style="width: 200px; height: 200px;" src="<%= user.passportUrl  %>" alt="" />
              </div>
              <div class="col-md-8">
                <div class="text-left" style="padding: 20px">
                  <p>FullName: <%= user.fullName %></p>
                  <p>Academic Qualification: <%- user.EduAndQual.Academic.replace(/\\n/gi, '  ') %></p>
                  <p>Certification: <%= user.EduAndQual.Cerifications.replace(/\\n/gi, '  ') %></p>
                  <p>EmailAddress: <%= user.emailAddress%></p>
                  <p>CityAddress: <%= user.cityAddress %>  StateAddress: <%= user.stateAddress %></p>
                  <a href="<%- "/api/user/" + user.owner_ID %>" class="pull-right btn-default"> readMore</a>
                  <!-- <p class="pull-right">ReadMore</p> -->
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-3"></div>
        </div>
      <% }) %>

    </section>

